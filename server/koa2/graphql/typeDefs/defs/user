type User {
    _id: ObjectId
    nick: String!
    avatar: String
    meta: {
        gendor: String
        age: Int
        location: String
        job: String
        hobby: String
        description: String
    }
    createdAt: Date
    updatedAt: Date
}



extend type Query {
    book(_id: ObjectId): Book
    book(nick: String): Book
    books: [Book]
}

extend type Mutation {
    addBook(name: String!, author: String!): Book
}